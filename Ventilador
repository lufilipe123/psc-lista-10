public class Ventilador {
    private int numeroPas;
    private int velocidade;
    private boolean estaOscilando;
    private String cor;
    private boolean alturaAjustavel;

    public Ventilador(int numeroPas, String cor, boolean alturaAjustavel) {
        this.numeroPas = numeroPas;
        this.cor = cor;
        this.alturaAjustavel = alturaAjustavel;
        this.velocidade = 0;
        this.estaOscilando = false;
    }

    public void ligar() {
        if (velocidade == 0) {
            velocidade = 1;
            System.out.println("Ventilador ligado na velocidade 1");
        }
    }

    public void desligar() {
        velocidade = 0;
        estaOscilando = false;
        System.out.println("Ventilador desligado");
    }

    public void aumentarVelocidade() {
        if (velocidade < 3) {
            velocidade++;
            System.out.println("Velocidade aumentada para: " + velocidade);
        } else {
            System.out.println("Velocidade máxima atingida");
        }
    }

    public void diminuirVelocidade() {
        if (velocidade > 0) {
            velocidade--;
            System.out.println("Velocidade diminuída para: " + velocidade);
        }
    }

    public void iniciarOscilacao() {
        if (velocidade > 0) {
            estaOscilando = true;
            System.out.println("Oscilação iniciada");
        } else {
            System.out.println("Ligue o ventilador primeiro");
        }
    }

    public void pararOscilacao() {
        estaOscilando = false;
        System.out.println("Oscilação parada");
    }

    // Getters e Setters
    public int getNumeroPas() { return numeroPas; }
    public int getVelocidade() { return velocidade; }
    public boolean isEstaOscilando() { return estaOscilando; }
    public String getCor() { return cor; }
    public boolean isAlturaAjustavel() { return alturaAjustavel; }
}
